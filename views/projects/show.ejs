<h1><%= project.name %></h1>

<a class="btn btn-primary" href="<%= project.githubLink %>" target="_blank">
  <i class="fa fa-github" aria-hidden="true"></i>
  Github Link
</a>

<a class="btn btn-primary" href="<%= project.deployedLink %>" target="_blank">
  <i class="fa fa-globe" aria-hidden="true"></i>
  Deployed Link
</a>

<p><%= project.description %></p>

<hr>

<p>
  <% project.categories.forEach((cat)=>{ %>
  <a href="/technologies/<%= cat.name %>">#<%= cat.name %></a>
  <% }) %>
</p>  

<hr />

<a href="/projects/<%= project.id%>/edit">Edit this project</a>

<a href="/">&larr; Back Home</a>

<hr>

<form action="/projects/<%= project.id %>/?_method=DELETE" method="post">
  <input type="hidden" name="id" value="<%= project.id %>">
  <input type="submit" value="Delete this Project">
</form>
